<!-- CSS adicional para esta página -->
<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        background: #1a2333; /* Color de respaldo por si falla la imagen */
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4); /* Overlay oscuro para mejor contraste */
        z-index: 1;
    }

    .hero-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        background-image: url('../../styles/imagenes/coromotosunset.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.9; /* Ajusta la opacidad de la imagen */
    }

    .hero-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

    .hero-section .container {
        position: relative;
        z-index: 2;
    }

    /* Feature Cards */
    .feature-label {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        opacity: 0.9;
    }

    .hover-scale {
        transition: transform 0.3s ease;
    }

        .hover-scale:hover {
            transform: scale(1.03);
        }

    .container {
        position: relative;
        z-index: 2; /* Asegura que el contenido quede sobre la imagen y el overlay */
    }

    /* Gallery */
    .gallery-item {
        height: 300px;
    }

        .gallery-item img {
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .gallery-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(41, 103, 255, 0.7);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .gallery-item:hover .gallery-overlay {
        opacity: 1;
    }

    .gallery-item:hover img {
        transform: scale(1.1);
    }

    .hero-image {
        background-position: 65% center;
    }
}
</style>

