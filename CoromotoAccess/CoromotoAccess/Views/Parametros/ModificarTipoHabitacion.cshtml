@model CoromotoAccess.Models.TipoHabitacion
@{
    ViewBag.Title = "ModificarTipoHabitacion";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Modificar Tipo de Habitación</h2>

    @if (ViewBag.MensajePantalla != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.MensajePantalla
        </div>
    }

    @using (Html.BeginForm("ModificarTipoHabitacion", "Parametros", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.HiddenFor(m => m.IdTipodeHabitacion)

        <div class="mb-4">
            <label class="form-label fw-semibold">Nombre del Tipo de Habitación:</label>
            @Html.TextBoxFor(m => m.NombreTipodeHabitacion, new { @class = "form-control", required = "required" })
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a href="@Url.Action("HojaDeConfiguracion", "Parametros")" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
    }
</div>

