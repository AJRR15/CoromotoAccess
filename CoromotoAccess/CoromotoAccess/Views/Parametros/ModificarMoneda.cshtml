@model CoromotoAccess.Models.TipoMoneda
@{
    ViewBag.Title = "ModificarMoneda";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Modificar Tipo de Moneda</h2>

    @if (ViewBag.MensajePantalla != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.MensajePantalla
        </div>
    }

    @using (Html.BeginForm("ModificarMoneda", "Parametros", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.HiddenFor(m => m.IdMoneda)

        <div class="mb-4">
            <label class="form-label fw-semibold">Nombre de la moneda:</label>
            @Html.TextBoxFor(m => m.NombreMoneda, new { @class = "form-control", required = "required" })
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a href="@Url.Action("HojaDeConfiguracion", "Parametros")" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
    }
</div>
<br />
<br />
<br />
@section Scripts {
    @if (TempData["MensajeMoneda"] != null && (bool)TempData["MensajeMoneda"])
    {
        <script>
            alert("Tipo de moneda configurado exitosamente.");
        </script>
    }
}

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


