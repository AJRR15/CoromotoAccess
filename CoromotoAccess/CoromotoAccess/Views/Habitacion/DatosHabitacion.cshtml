@model List<CoromotoAccess.Models.Habitacion>
@{
    ViewBag.Title = "Datos de la Habitación";
}

<section id="content" class="prod">
    <div class="container">
        <div class="wrapper">
            <article class="grid_24">
                @foreach (var habitacion in Model)
                {
                    <h2 class="p17 text-black font-weight-bold">@habitacion.NombreHabitacion</h2>
                    <div class="card mb-4 shadow-sm">
                        <div class="row no-gutters">
                            <div class="col-md-6">
                                <img src="~/Styles/imagenes/AfuerasVilla.jpg" class="card-img" alt="@habitacion.NombreHabitacion" style="object-fit: cover; height: 100%;">
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <h5 class="text-dark font-weight-bold">Descripción:</h5>
                                    <p class="card-text">@habitacion.Descripcion</p>

                                    <h5 class="text-dark font-weight-bold">Precio:</h5>
                                    <p class="card-text">$@habitacion.Precio.ToString("N2") por noche</p>

                                    <h5 class="text-dark font-weight-bold">Check-in:</h5>
                                    <p class="card-text">@habitacion.CheckIn.ToString("hh:mm tt")</p>

                                    <h5 class="text-dark font-weight-bold">Check-out:</h5>
                                    <p class="card-text">@habitacion.CheckOut.ToString("hh:mm tt")</p>

                                    <h5 class="text-dark font-weight-bold">Estado:</h5>
                                    <p class="card-text">@(habitacion.Estado ? "Disponible" : "No disponible")</p>
                                    <div class="d-flex justify-content-end">
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#reservarModal">Reservar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </article>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="reservarModal" tabindex="-1" role="dialog" aria-labelledby="reservarModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservarModalLabel">Reservar Habitación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="reservarForm">
                    <div class="form-group">
                        <label for="fechaEntrada">Fecha de Entrada:</label>
                        <input type="date" class="form-control" id="fechaEntrada" name="fechaEntrada" required>
                    </div>
                    <div class="form-group">
                        <label for="fechaSalida">Fecha de Salida:</label>
                        <input type="date" class="form-control" id="fechaSalida" name="fechaSalida" required>
                    </div>
                    <div class="form-group">
                        <label for="nombreUsuario">Nombre del Usuario:</label>
                        <input type="text" class="form-control" id="nombreUsuario" name="nombreUsuario" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('reservarForm').addEventListener('submit', function (event) {
        event.preventDefault();
        alert('Procesando reserva');
        window.location.href = 'CatalogoHabitaciones';
    });
</script>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="~/Scripts/CoromotoAccess/Reservar.js"></script>
