@model List<CoromotoAccess.Models.Reserva>
@{
    ViewBag.Title = "Administrar Reservas";
    var usuarios = ViewBag.Usuarios as List<CoromotoAccess.Models.Usuario>;
    var tiposHabitacion = ViewBag.TiposHabitacion as List<CoromotoAccess.Models.TipoHabitacion>;
}

<div class="container mt-5">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h2 class="text-left mb-0">Administrar Reservas</h2>
        </div>
        <div class="col-md-6 text-right">
            <input type="text" class="form-control d-inline-block w-75" id="buscarCliente" placeholder="Buscar por cliente">
            <button class="btn btn-outline-dark d-inline-block ml-2" onclick="filtrarReservas()">Buscar</button>
        </div>
    </div>
    <br />
    <h3 class="text-left mb-0">Reservas</h3>
    <br />
    <table class="table table-bordered" style="border: 2px solid #000;">
        <thead>
            <tr>
                <th>IdReserva</th>
                <th>Cliente</th>
                <th>Teléfono</th>
                <th>Tipo de Habitación</th>
                <th>CheckIn</th>
                <th>CheckOut</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reserva in Model)
            {
                var usuario = usuarios.FirstOrDefault(u => u.ConsecutivoCliente == reserva.IdUsuario);
                var tipoHabitacion = tiposHabitacion.FirstOrDefault(t => t.IdTipodeHabitacion == reserva.IdHabitacion);

                <tr>
                    <td>@reserva.IdReserva</td>
                    <td>@usuario.Nombre @usuario.Apellido</td>
                    <td>@usuario.Telefono</td>
                    <td>@tipoHabitacion.NombreTipodeHabitcion</td>
                    <td>@reserva.CheckIn.ToString("yyyy-MM-dd")</td>
                    <td>@reserva.CheckOut.ToString("yyyy-MM-dd")</td>
                    <td>@(reserva.Estado ? "Confirmado" : "Pendiente")</td>
                    <td>
                        <a class="btn btn-warning btn-sm mb-1" href="@Url.Action("ModificarReserva", "Reservas", new { id = reserva.IdReserva })">Modificar</a>
                        <form action="@Url.Action("EliminarReserva", "Reservas")" method="post" style="display:inline;">
                            <input type="hidden" name="IdReserva" value="@reserva.IdReserva" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta reserva?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>
