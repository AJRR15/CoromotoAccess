@model CoromotoAccess.Models.Usuario
@{
    ViewBag.Title = "Registro";
}

<section class="register-section" style="min-height: 100vh; display: flex; background-size: cover;">
    <div class="container py-5" style="position: relative; z-index: 1;">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="background-color: rgba(255, 255, 255, 0.95);">
                    <!-- Header con logo -->
                    <div class="register-header" style="background: linear-gradient(135deg, #2c3e50 0%, #0d6efd 100%); height: 120px; position: relative;">
                        <div class="logo-container" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 100%; text-align: center;">
                            <img src="~/Styles/imagenes/LogoCoromotoNegro.png" alt="CoromotoAccess Logo" style="max-width: 180px; filter: brightness(0) invert(1);">
                        </div>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <h3 class="text-center mb-4 fw-bold" style="color: #2c3e50;">Crear Cuenta</h3>
                        <p class="text-center text-muted mb-4">Complete el formulario para registrarse</p>

                        @if (ViewBag.MensajePantalla != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @ViewBag.MensajePantalla
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @using (Html.BeginForm("Registro", "Login", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                        {
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold small text-uppercase text-muted">Identificación</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-id-card"></i></span>
                                        @Html.TextBoxFor(m => m.Identificacion, new
                                        {
                                            @class = "form-control py-3",
                                            @required = "required",
                                            placeholder = "Ingrese su identificación"
                                        })
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold small text-uppercase text-muted">Teléfono</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-phone"></i></span>
                                        @Html.TextBoxFor(m => m.Telefono, new
                                        {
                                            @class = "form-control py-3",
                                            @type = "tel",
                                            @required = "required",
                                            placeholder = "Ingrese su teléfono"
                                        })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold small text-uppercase text-muted">Nombre</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                        @Html.TextBoxFor(m => m.Nombre, new
                                        {
                                            @class = "form-control py-3",
                                            @required = "required",
                                            placeholder = "Ingrese su nombre"
                                        })
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold small text-uppercase text-muted">Apellido</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                        @Html.TextBoxFor(m => m.Apellido, new
                                        {
                                            @class = "form-control py-3",
                                            @required = "required",
                                            placeholder = "Ingrese su apellido"
                                        })
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase text-muted">Correo Electrónico</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                    @Html.TextBoxFor(m => m.CorreoElectronico, new
                                    {
                                        @class = "form-control py-3",
                                        @type = "email",
                                        @required = "required",
                                        placeholder = "Ingrese su correo electrónico"
                                    })
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase text-muted">Foto de Perfil (URL)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-image"></i></span>
                                    @Html.TextBoxFor(m => m.FotoPerfil, new
                                    {
                                        @class = "form-control py-3",
                                        @required = "required",
                                        placeholder = "Ingrese URL de su foto"
                                    })
                                </div>
                                <small class="text-muted">Puede subir su foto a un servicio como Imgur y pegar el enlace aquí</small>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase text-muted">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                    @Html.TextBoxFor(m => m.Contrasenna, new
                                    {
                                        @class = "form-control py-3",
                                        @type = "password",
                                        @required = "required",
                                        placeholder = "Cree una contraseña"
                                    })
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-3 fw-bold mb-4" style="background-color: #0d6efd; border-color: #0b5ed7;">
                                <i class="fas fa-user-plus me-2"></i> Registrarse
                            </button>

                            <div class="text-center pt-3 border-top">
                                <p class="small text-muted mb-0">
                                    ¿Ya tiene una cuenta?
                                    <a href="@Url.Action("InicioSesion", "Login")" class="text-primary fw-bold text-decoration-none">Iniciar Sesión</a>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .register-section {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border: none;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
        }

    .form-control {
        border-radius: 0.375rem;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #2c3e50;
            box-shadow: 0 0 0 0.25rem rgba(44, 62, 80, 0.25);
        }

    .btn-primary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0b5ed7 !important;
            transform: translateY(-2px);
        }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
    }
</style>

<!-- Font Awesome para iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Script para validación -->
<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>