@model CoromotoAccess.Models.Usuario   
@{
    ViewBag.Title = "Registro";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <br />
    <br />
    <br />
    <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 col-lg-6 col-xxl-3">
                <div class="card mb-0">
                    <div class="card-body">
                        <br>
                        <center>
                            <img src="~/Styles/imagenes/LogoCoromotoNegro.png" alt="CoromotoAccess Logo" class="logo-img" style="max-width: 50%; height: auto;">
                        </center>
                        <br>
                        <h4 class="text-center mb-4">Registrar Sesión</h4>

                        @if (ViewBag.MensajePantalla != null)
                        {
                            <div class="alert alert-danger text-center" role="alert">
                                @ViewBag.MensajePantalla
                            </div>
                        }

                        @using (Html.BeginForm("Registro", "Login"))
                        {
                            <div class="mb-4">
                                <label class="form-label">Identificación</label>
                                @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control", @type = "id", @required = "required" })
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Nombre</label>
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @type = "name", @required = "required" })
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Apellido</label>
                                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", @type = "lastname", @required = "required" })
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Correo Electrónico</label>
                                @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", @type = "email", @required = "required" })
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Número de télefono</label>
                                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", @type = "tel", @required = "required" })
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Foto de Perfil</label>
                                @Html.TextBoxFor(m => m.FotoPerfil, new { @class = "form-control", @type = "text", @required = "required" })
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Contraseña</label>
                                @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control", @type = "password", @required = "required" })
                            </div>
                            <br>

                            <input type="submit" class="btn w-100 py-2" style="background-color: #101820; color: white;" value="Registrarse">

                            <br><br>
                            <div class="d-flex align-items-center justify-content-center">
                                <p class="fs-4 mb-0 fw-bold">¿Ya tiene una cuenta?</p>
                            </div>
                            <div class="d-flex align-items-center justify-content-center">
                                <a class="text-primary fw-bold ms-2" href="@Url.Action("InicioSesion", "Login")">Iniciar Sesión</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>
