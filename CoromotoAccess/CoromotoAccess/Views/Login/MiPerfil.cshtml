@model CoromotoAccess.Models.Usuario
@{
    ViewBag.Title = "Mi Perfil";
}
@if (ViewBag.MensajePantalla != null)
{
    <div class="alert alert-info text-center" role="alert">
        @ViewBag.MensajePantalla
    </div>
}
@using (Html.BeginForm("MiPerfil", "Perfil", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.HiddenFor(m => m.ConsecutivoCliente)

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-dark text-white text-center">
                        <h3 class="mb-0">Mi Perfil</h3>
                    </div>
                    <div class="card-body p-4">

                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Nombre:</strong></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Apellido:</strong></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4"><strong>ID:</strong></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Teléfono:</strong></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", type = "tel", required = "required" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Correo Electrónico:</strong></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", type = "email", required = "required" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Rol:</strong></div>
                            <div class="col-md-8">
                                @if (Model != null)
                                {
                                    if (Model.ConsecutivoRol == 1)
                                    {<span>Administrador</span>;
                                    }
                                    else if (Model.ConsecutivoRol == 2)
                                    { <span>Empleado</span>;
                                    }
                                    else
                                    { <span>Cliente</span>;
                                    }
                                }
                            </div>
                        </div>
                        @if (TempData["MensajePantalla"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["MensajePantalla"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                            </div>
                        }

                        <div class="text-center">
                            <button type="submit" class="btn btn-dark btn-lg">Ver mi Perfil y Actualizar Cambios</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
