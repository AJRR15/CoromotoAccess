@model CoromotoAccess.Models.RestablecerContrasennaViewModel

<section class="login-section" style="min-height: 100vh; display: flex;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg rounded-3 p-4">
                    <h3 class="text-center mb-4">Restablecer Contraseña</h3>

                    @using (Html.BeginForm("RestablecerContrasenna", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Token)

                        <div class="mb-3">
                            @Html.LabelFor(m => m.NuevaContrasenna)
                            @Html.PasswordFor(m => m.NuevaContrasenna, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ConfirmarContrasenna)
                            @Html.PasswordFor(m => m.ConfirmarContrasenna, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Restablecer</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
