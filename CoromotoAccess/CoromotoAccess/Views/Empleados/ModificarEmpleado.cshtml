@model  CoromotoAccess.Models.Empleado

@{
    ViewBag.Title = "ModificarEmpleado";
}
@if (ViewBag.MensajePantalla != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @ViewBag.MensajePantalla
    </div>
}

@using (Html.BeginForm("ModificarEmpleado", "Empleados", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.HiddenFor(m => m.ConsecutivoEmp)


    <div class="container mt-5">
        <h2 class="text-center mb-4">Modificar Empleado</h2>
        <form class="form-horizontal">

            <div class="mb-4">
                <label class="form-label fw-semibold">Nombre:</label>
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required", @disabled = "disabled" })
            </div>
            <div class="mb-4">
                <label class="form-label fw-semibold">Apellido:</label>
                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", required = "required", @disabled = "disabled" })
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Correo Electrónico:</label>
                @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", type = "email", required = "required" })
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Teléfono:</label>
                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", type = "tel", required = "required" })
            </div>
            <div class="form-group">
                <label class="control-label col-md-4" for="IdRol">Rol:</label>
                <div class="col-md-8">
                    @Html.DropDownList("IdRol", (SelectList)ViewBag.Roles, "Seleccione un Rol", new { @class = "form-control", required = "required" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4" for="IdVilla">Villas:</label>
                <div class="col-md-8">
                    @Html.DropDownList("IdVilla", (SelectList)ViewBag.Villas, "Seleccione una villa", new { @class = "form-control", required = "required" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-4" for="IdTurno">Turno:</label>
                    <div class="col-md-8">
                        @Html.DropDownList("IdTurno", (SelectList)ViewBag.Turnos, "Seleccione un Turno", new { @class = "form-control", required = "required" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <a href="@Url.Action("GestionEmpleados", "Empleados")" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </div>
        </form>
    </div>
    
}
