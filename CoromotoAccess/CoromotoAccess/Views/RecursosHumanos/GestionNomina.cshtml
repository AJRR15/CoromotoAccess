@model IEnumerable<CoromotoAccess.Models.Nomina>
@{
    ViewBag.Title = "GestionNomina";
}

<link href="~/Styles/css/tabla.css" rel="stylesheet" />

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center">Gestión de Nómina</h2>
        <button class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#crearNominaModal">Crear Nómina</button>
        <div class="input-group w-50">
            <input type="text" class="form-control form-control-sm" id="searchInput" placeholder="Buscar empleado..." aria-label="Buscar">
            <div class="input-group-append" style="margin-left: 5px;">
                <button class="btn btn-info btn-sm" type="button" id="searchButton">Buscar</button>
            </div>
        </div>
    </div>

    <!-- Buscador alineado a la derecha y más pequeño -->
    <!-- Tabla más compacta -->
    <div class="villa-container">
        <h3 class="villa-title">Nomina de Empleados</h3>
        <div class="table-responsive">
            <table class="villa-table table table-sm table-striped text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Empleado</th>
                        <th>Rol</th>
                        <th>Salario</th>
                        <th>Bono</th>
                        <th>Multa</th>
                        <th>Turnos Trabajados (Horas)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="nominaTable">
                    @if (Model != null)
                    {
                        foreach (var nomina in Model)
                        {
                            var empleado = ViewBag.DiccionarioEmpleados[nomina.IdEmpleado];
                            var nombreCompleto = empleado.Nombre + " " + empleado.Apellido;
                            var rolEmpleado = ViewBag.DiccionarioRoles[empleado.ConsecutivoRol];

                            <tr class="nominaRow">
                                <td class="nombreEmpleado">@nombreCompleto</td>
                                <td>@rolEmpleado</td>
                                <td>@nomina.Salario</td>
                                <td>@nomina.Bono</td>
                                <td>@nomina.Multa</td>
                                <td>@empleado.HorasTrabajadas</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modificarNominaModal"
                                                data-nombre="@nombreCompleto" data-id="@nomina.IdNomina" data-salario="@nomina.Salario"
                                                data-bono="@nomina.Bono" data-multa="@nomina.Multa">
                                            Modificar
                                        </button>
                                        @using (Html.BeginForm("EliminarNomina", "RecursosHumanos", FormMethod.Post))
                                        {
                                            @Html.Hidden("id", nomina.IdNomina)
                                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="crearNominaModal" tabindex="-1" aria-labelledby="crearNominaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CrearNomina", "RecursosHumanos", FormMethod.Post))
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="crearNominaLabel">Crear Nómina</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Empleado</label>
                        @Html.DropDownList("IdEmpleado", (SelectList)ViewBag.Empleados, "Seleccione un empleado", new { @class = "form-select" })
                    </div>
                    <div class="mb-3">
                        <label>Salario</label>
                        <input type="number" step="0.01" name="Salario" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Bono</label>
                        <input type="number" step="0.01" name="Bono" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Multa</label>
                        <input type="number" step="0.01" name="Multa" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            }
        </div>
    </div>
</div>



<div class="modal fade" id="modificarNominaModal" tabindex="-1" aria-labelledby="modificarNominaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("ModificarNomina", "RecursosHumanos", FormMethod.Post))
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="modificarNominaLabel">Modificar Nómina</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    @Html.Hidden("IdNomina", null, new { id = "modificarIdNomina" })
                    <div class="mb-3">
                        <label>Empleado</label>
                        <input type="text" id="targetName" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label>Salario</label>
                        <input type="number" step="0.01" name="Salario" class="form-control" id="modificarSalario" required />
                    </div>
                    <div class="mb-3">
                        <label>Bono</label>
                        <input type="number" step="0.01" name="Bono" class="form-control" id="modificarBono" required />
                    </div>
                    <div class="mb-3">
                        <label>Multa</label>
                        <input type="number" step="0.01" name="Multa" class="form-control" id="modificarMulta" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">Modificar</button>
                </div>
            }
        </div>
    </div>
</div>  

<script>

    var modificarModal = document.getElementById('modificarNominaModal');
    modificarModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        document.getElementById('modificarIdNomina').value = button.getAttribute('data-id');
        document.getElementById('targetName').value = button.getAttribute('data-nombre');
        document.getElementById('modificarSalario').value = button.getAttribute('data-salario');
        document.getElementById('modificarBono').value = button.getAttribute('data-bono');
        document.getElementById('modificarMulta').value = button.getAttribute('data-multa');
    });

    function buscarEmpleado() {
        var searchValue = document.getElementById("searchInput").value.trim().toLowerCase();
        var rows = document.querySelectorAll(".nominaRow");

        rows.forEach(function (row) {
            var nombreEmpleado = row.querySelector(".nombreEmpleado").textContent.toLowerCase();
            if (nombreEmpleado.includes(searchValue)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }

    document.getElementById("searchInput").addEventListener("keyup", function (event) {
        if (event.key === "Enter") {
            buscarEmpleado();
        }
    });

    document.getElementById("searchButton").addEventListener("click", buscarEmpleado);
</script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>